<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_timesheet"
        android:name="com.firstapp.mjc_task.ui.timesheet.TimesheetFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_timesheet" />

    <fragment
        android:id="@+id/navigation_from"
        android:name="com.firstapp.mjc_task.ui.form.FormFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_form" />

    <fragment
        android:id="@+id/navigation_hierachy"
        android:name="com.firstapp.mjc_task.ui.hirerchy.HierarchyFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_hierarchy" />

    <fragment
        android:id="@+id/navigation_more"
        android:name="com.firstapp.mjc_task.ui.more.MoreFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_more" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.firstapp.mjc_task.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.firstapp.mjc_task.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.firstapp.mjc_task.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>